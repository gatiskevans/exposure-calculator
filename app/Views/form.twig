{% extends 'index.twig' %}
{% block contents %}

<div class="calculator">

    <form action="/" method="post">
        <label for="iso">Enter ISO: </label>
        <input type="text" id="iso" name="iso" placeholder="e.g. 200" value="{{ iso }}" />

        <label for="aperture">Enter Aperture: </label>
        <input type="text" id="aperture" name="aperture" placeholder="e.g. 5.6" value="{{ aperture }}" />

        <label for="shutter">Enter Shutter Speed: </label>
        <input type="text" id="shutter" name="shutter" placeholder="e.g. 1/500" value="{{ shutterSpeed }}" />

        <input type="submit" name="submit" value="Calculate" />
    </form>

</div>

    {% if result is defined %}

        {{ result }} EV
        <br/>

    {% endif %}

    <a href="/history">See History</a>

{% endblock %}