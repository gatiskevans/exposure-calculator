{% extends 'index.twig' %}
{% block contents %}

    <style>
        .container{
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            margin: auto;
            width: 30%;
        }
        .information {
            font-weight: bold;
            border: 1px solid black;
            border-radius: 4px;
            padding: 5px 10px;
            margin-bottom: 15px;
        }
        .navigation {
            margin-top: 20px;
            background-color: #04AA6D;
            border-radius: 4px;
            color: white;
            padding: 8px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }
    </style>

<div class="container">

    {% if exposure is defined %}

        <h1>Exposure</h1>

        <div class="information">

            <p>ID: {{ exposure.id }}</p>
            <p>ISO: {{ exposure.ISO }}</p>
            <p>Aperture: F/{{ exposure.aperture }}</p>
            <p>Shutter Speed: {{ exposure.shutterSpeed }}</p>
            <p>Calculated Exposure Value: {{ exposure.exposureValue }} EV</p>
            <p>Good for: {{ exposure.description }}</p>

        </div>

        <form action="/delete/{{ exposure.id }}" method="post">
            <button style="color: red;" onclick="return confirm('Are you sure?')">
                Delete
            </button>
        </form>

    {% else %}
        Nothing to see here!
    {% endif %}

    <a class="navigation" href="/history">Back to History</a>

</div>

{% endblock %}